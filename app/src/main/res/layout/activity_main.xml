<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#ff1ba1ee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wytelyte.theweatherapp.MainActivity">

    <TextView
        android:id="@+id/city_text"
        android:textColor="#fff"
        android:text="Lagos, NG"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/thumnail_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/city_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/temp_text"
        android:text="12 Deg"
        android:textStyle="normal"
        android:textColor="#fff"
        android:textSize="42sp"
        android:layout_below="@id/city_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wind_text"
        android:textSize="16sp"
        android:text="Wind"
        android:layout_below="@id/thumnail_icon"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/cloud_text"
        android:text="Cloud"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/wind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pressure_text"
        android:text="Pressure"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_below="@id/cloud_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/humid_text"
        android:text="Humidity"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/pressure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/rise_text"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:text="Sunrise"
        android:layout_below="@id/humid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/set_text"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Sunset"
        android:layout_below="@id/rise_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/update_text"
        android:text="Last Updated"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
